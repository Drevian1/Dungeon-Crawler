public class Combat extends Weapon {

    public void BattleCheck(){
        int h = Enemies.baseHP;
        if(h == 30 ){
            System.out.println("Skeleton is at full health!");

        }if(h < 0){
            System.out.println("Skeleton has been defeated!");

        }

    }

    public boolean WinCheck(){

        if(Enemies.baseHP == 0){
            System.out.println("You win");
            return true;
        }else {


            return false;
        }
    }
}
